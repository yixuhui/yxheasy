sum(c2)/(sum(c1)+sum(c2)+sum(c3)+sum(c4)+sum(c5))*100,
sum(c3)/(sum(c1)+sum(c2)+sum(c3)+sum(c4)+sum(c5))*100,
sum(c4)/(sum(c1)+sum(c2)+sum(c3)+sum(c4)+sum(c5))*100,
sum(c5)/(sum(c1)+sum(c2)+sum(c3)+sum(c4)+sum(c5))*100 from
(
select 
case when ctl1='1' then '1' else '0' END c1,
case when ctl1='2' then '1' else '0' END c2,
case when ctl1='3' then '1' else '0' END c3,
case when ctl1='4' then '1' else '0' END c4,
case when ctl1='5' then '1' else '0' END c5
